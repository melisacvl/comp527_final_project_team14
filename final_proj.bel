% Defining addition using Beluga recursion
rec add_nat : [⊢ tm nat] → [⊢ tm nat] → [⊢ tm nat] =
fn a b ⇒ case a of
  | [⊢ zero] ⇒ b
  | [⊢ succ M] ⇒
	let [⊢ N] = add_nat [⊢ M] b in
	[⊢ succ N]
;

